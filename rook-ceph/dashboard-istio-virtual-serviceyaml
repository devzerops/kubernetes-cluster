---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: ceph-dashboard-virtualservice
  namespace: istio-system
spec:
  hosts:
  - "ceph-dashboard.secret-domain.com"
  gateways:
  - ceph-dashboard-gateway
  tls:
  - match:
    - port: 443
      sniHosts:
      - ceph-dashboard.secret-domain.com
    route:
    - destination:
        host: rook-ceph-mgr-dashboard.rook-ceph.svc.cluster.local
        port:
          number: 8443